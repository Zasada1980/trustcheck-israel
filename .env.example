# TrustCheck Israel - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production

# ============================================
# APPLICATION SETTINGS
# ============================================
NEXT_PUBLIC_APP_URL=https://trustcheck.co.il
NEXT_PUBLIC_APP_NAME=TrustCheck Israel

# ============================================
# GOOGLE ANALYTICS 4
# ============================================
# Get your GA4 Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_ID=

# ============================================
# POSTGRESQL DATABASE (Government Data Cache)
# ============================================
# Local database for caching data.gov.il datasets
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trustcheck_gov_data
POSTGRES_USER=trustcheck_admin
POSTGRES_PASSWORD=your_secure_postgres_password_here

# PgAdmin (optional - for database management)
PGADMIN_PASSWORD=your_pgadmin_password_here

# ============================================
# CHECKID API (Business Registry Data)
# ============================================
# Get your API key from: https://checkid.co.il/developers
CHECKID_API_KEY=mock_key_for_mvp
CHECKID_API_URL=https://api.checkid.co.il

# ============================================
# GOOGLE GEMINI API (AI for Reports)
# ============================================
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_GEMINI_MODEL=gemini-2.0-flash
GOOGLE_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta
GOOGLE_MAX_TOKENS=2000

# ============================================
# LOCAL OLLAMA AI (via Cloudflare Tunnel)
# ============================================
# Ollama server URL (can be local or remote via tunnel)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=trustcheck:15b

# ============================================
# ADMIN PANEL AUTHENTICATION
# ============================================
# Password for accessing /admin panel
# CHANGE THIS IN PRODUCTION!
ADMIN_PASSWORD=your_secure_admin_password_here

# ============================================
# OLLAMA API (Local AI Chat)
# ============================================
# URL to Ollama API endpoint (production server or localhost)
# Format: http://host:port (WITHOUT /api/generate or /api/chat)
OLLAMA_API_URL=http://localhost:11434
# Production: OLLAMA_API_URL=https://trustcheck.co.il/api/ollama

# ============================================
# STRIPE PAYMENT GATEWAY
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_live_your_public_key_here
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product IDs (create in Stripe Dashboard)
STRIPE_PRODUCT_BASIC=price_basic_check_id
STRIPE_PRODUCT_PREMIUM=price_premium_check_id

# ============================================
# SUPABASE DATABASE (PostgreSQL)
# ============================================
# Get your connection strings from: https://app.supabase.com/project/_/settings/database
DATABASE_URL=postgresql://postgres:your_password@db.xxxxx.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your_password@db.xxxxx.supabase.co:5432/postgres

# Supabase Anon Key (for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_min_32_chars
NEXTAUTH_URL=https://trustcheck.co.il

# ============================================
# EMAIL SERVICE (Optional - for notifications)
# ============================================
# SMTP Configuration (e.g., Gmail, SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@trustcheck.co.il

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================
# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# RATE LIMITING & SECURITY
# ============================================
# Max API requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=https://trustcheck.co.il,https://www.trustcheck.co.il

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=/var/log/trustcheck/app.log

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
ENABLE_COURT_SEARCH=false
ENABLE_CREDIT_CHECK=false
ENABLE_B2B_PORTAL=false
